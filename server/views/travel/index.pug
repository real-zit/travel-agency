extends ../layout/index

block content
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destiny_${travel.image}_ln.jpg`, alt="Image")
            .col-md-7
                h1 #{pageTitle}
                p
                    i.fas.fa-calendar-alt
                    | Departure Date: #{travel.dep_date}  
                p
                    | Return Date:#{travel.return_date}
                p
                    i.fas.fa-dollar-sign
                    |  #{travel.price}

                p
                    i.fas.fa-users
                    | #{travel.available } Available Seats

                p #{travel.description }         